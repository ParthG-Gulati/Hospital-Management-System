<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="menu_appointment" model="website.menu">
        <field name="name">Book Appointment</field>
        <field name="url">/book/appointment/</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">10</field>
    </record>
    <template id="book_appointment_online">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form role="form" method="POST" action="/appointment/placed">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <label for="patient_name" class="control-label">Patient Name</label>
                            <select name="patient_name" class="form-control link-style">
                                <t t-foreach="patient_record" t-as="patient">
                                    <option t-esc="patient.name" t-att-value="patient.id"/>
                                </t>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="doctor_name" class="control-label">Doctor Name</label>
                            <select name="doctor_name" class="form-control link-style">
                                <t t-foreach="doctor_record" t-as="doctor">
                                    <option t-esc="doctor.name" t-att-value="doctor.id"/>
                                </t>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="meeting_subject" class="control-label">Meeting Subject</label>
                            <input type="text" name="meeting_subject" t-att-value="meeting_subject" id="meeting_subject"
                                   class="form-control" required="required"/>
                        </div>
                        <div class="form-group">
                            <label for="appoitment_date" class="control-lable">Appointment Date</label>
                            <input type="datetime" name="appointment_date" t-att-value="appointment_date"
                                   id="appointment_date" class="form-control" required="required"/>
                        </div>
                        <div class="form-group">
                            <label for="appoitment_date_end" class="control-lable">Appointment Ends</label>
                            <input type="datetime" name="appointment_date_end" t-att-value="appointment_date_end"
                                   id="appointment_date_end" class="form-control" required="required"/>
                        </div>
                        <!--                         <div class="form-group"> -->
                        <!--                             <label for="duration" class="control-label">Duration :</label> -->
                        <!--                             <input type="number" name="duration" t-att-value="duration" id="duration" required="required"/> -->
                        <!--                         </div> -->
                        <div class="oe_login_buttons">
                            <button type="submit" class="btn btn-primary pull-left">Book Appointment</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
    <record id="appointment_submit" model="website.page">
        <field name="name">Appointment Booked</field>
        <field name="type">qweb</field>
        <field name="url">/appointment/placed/</field>
        <field name="website_published">True</field>
        <field name="key">my_hospital_management.appointment_submit</field>
        <field name="arch" type="xml">
            <t name="Appointment" t-name="my_hospital_management.appointment_submit">
                <t t-call="website.layout">
                    <div class="container">
                        <h1>Thanks! Your Appointment is booked</h1>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>