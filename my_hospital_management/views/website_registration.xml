<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="menu_register" model="website.menu">
        <field name="name">Register</field>
        <field name="url">/register</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">15</field>
    </record>
    <template id="registration_online" name="Register">
        <t t-call="website.layout">
            <section class="vh-100">
                <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                <div class="card" style="border-radius: 15px;">
                                    <div class="card-body p-5">
                                        <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                                        <form role="form" method="POST" action="/registered">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <div class="form-outline mb-4">
                                                <input type="text" name="registry_name" t-att-value="registry_name"
                                                       id="registry_name" placeholder="Your Name"
                                                       class="form-control form-control-lg"/>
                                                <!--                                                <label class="form-label" for="registry_name">Your Name</label>-->
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="email" name="registry_email" t-att-value="registry_email"
                                                       id="registry_email" placeholder="Your Email"
                                                       class="form-control form-control-lg"/>
                                                <!--                                                <label class="form-label" for="registry_email">Your Email</label>-->
                                            </div>

                                            <div class="c">
                                                <input type="password" name="registry_pass"
                                                       t-att-value="registry_pass" id="registry_pass"
                                                       placeholder="Password"
                                                       class="form-control form-control-lg"/>
                                                <!--                                                <label class="form-label" for="registry_pass">Password</label>-->
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="password" name="confirm_pass" t-att-value="confirm_pass"
                                                       id="confirm_pass"
                                                       placeholder="Repeat Your password"
                                                       class="form-control form-control-lg"/>
                                                <!--                                                <label class="form-label" for="confirm_pass">Repeat your password-->
                                                <!--                                                </label>-->
                                            </div>

                                            <!--                                            <div class="form-check d-flex justify-content-center mb-5">-->
                                            <!--                                                <input-->
                                            <!--                                                        class="form-check-input me-2"-->
                                            <!--                                                        type="checkbox"-->
                                            <!--                                                        value=""-->
                                            <!--                                                        id="agree"-->
                                            <!--                                                />-->
                                            <!--                                                <label class="form-check-label" for="agree">-->
                                            <!--                                                    I agree all statements in-->
                                            <!--                                                    <a href="#!" class="text-body">-->
                                            <!--                                                        <u>Terms of service</u>-->
                                            <!--                                                    </a>-->
                                            <!--                                                </label>-->
                                            <!--                                            </div>-->

                                            <div class="d-flex justify-content-center">
                                                <button type="submit"
                                                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                                    Register
                                                </button>
                                            </div>

                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>

    <record id="register_submit" model="website.page">
        <field name="name">Registeration</field>
        <field name="type">qweb</field>
        <field name="url">/registered</field>
        <field name="website_published">True</field>
        <field name="key">my_hospital_management.register_submit</field>
        <field name="arch" type="xml">
            <t name="Registration" t-name="my_hospital_management.register_submit">
                <t t-call="website.layout">
                    <div class="container">
                        <h1>Thanks! You have Sucessfully Registered</h1>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>